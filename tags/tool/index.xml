y-1900]&amp;(0x10000&gt;&gt;m))?30:29;}function solar2lunar(solarYear,solarMonth,solarDay){var lunarYear,lunarMonth,lunarDay,isLeap=false;var i,leap=0,temp=0;var baseDate=new Date(1900,0,31);var targetDate=new Date(solarYear,solarMonth,solarDay);var offset=Math.floor((targetDate-baseDate)/86400000);for(i=1900;i&lt;2100&amp;&amp;offset&gt;0;i++){temp=getLunarYearDays(i);offset-=temp;}if(offset&lt;0){offset+=temp;i--;}lunarYear=i;leap=leapMonth(lunarYear);for(i=1;i&lt;13&amp;&amp;offset&gt;0;i++){if(leap&gt;0&amp;&amp;i===leap+1&amp;&amp;!isLeap){i--;isLeap=true;temp=leapDays(lunarYear);}else{temp=getLunarMonthDays(lunarYear,i);}if(isLeap&amp;&amp;i===leap+1)isLeap=false;offset-=temp;}if(offset&lt;0){offset+=temp;i--;}lunarMonth=i;lunarDay=offset+1;isLeap=(leap===lunarMonth);return{year:lunarYear,month:lunarMonth,day:lunarDay,isLeap:isLeap};}function getLunarDayStr(day){if(day===10)return&#39;初十&#39;;if(day===20)return&#39;二十&#39;;if(day===30)return&#39;三十&#39;;return nStr2[Math.floor(day/10)]+(day%10===0?&#39;十&#39;:[&#39;一&#39;,&#39;二&#39;,&#39;三&#39;,&#39;四&#39;,&#39;五&#39;,&#39;六&#39;,&#39;七&#39;,&#39;八&#39;,&#39;九&#39;][day%10-1]);}function getLunarMonthStr(month,isLeap){return isLeap?&#39;闰&#39;+lunarMonths[month-1]:lunarMonths[month-1];}function getFestStr(m,d){var md=(m&lt;10?&#39;0&#39;+m:m)+(d&lt;10?&#39;0&#39;+d:d);var s=&#39;&#39;;for(var i=0;i&lt;festival.length;i++){if(festival[i].substring(0,4)===md)s=festival[i].substring(5);}for(var i=0;i&lt;jieqi.length;i++){if(jieqi[i].substring(0,4)===md)s=jieqi[i].substring(5);}return s;}function drawCalendar(y,m){var titleEl=document.getElementById(&#39;calendar-title&#39;);if(titleEl)titleEl.innerText=y+&#39;年&#39;+(m+1)+&#39;月&#39;;var body=document.getElementById(&#39;calendar-body&#39;);if(!body)return;body.innerHTML=&#39;&#39;;var firstDay=new Date(y,m,1).getDay();var days=getSolarDays(y,m);var rows=Math.ceil((firstDay+days)/7);var cell=0;for(var i=0;i&lt;rows;i++){var tr=document.createElement(&#39;tr&#39;);for(var j=0;j&lt;7;j++){var td=document.createElement(&#39;td&#39;);if(i===0&amp;&amp;j&lt;firstDay){td.innerHTML=&#39;&#39;;}else if(cell&gt;=days){td.innerHTML=&#39;&#39;;}else{var d=cell+1;var lunar=solar2lunar(y,m,d);var lunarDay=getLunarDayStr(lunar.day);var lunarMonth=getLunarMonthStr(lunar.month,lunar.isLeap);var fest=getFestStr(m+1,d);td.innerHTML=d+&#39;&lt;br/&gt;&#39;+lunarMonth+&#39; &#39;+lunarDay+&#39;&lt;br/&gt;&#39;+fest;if(new Date(y,m,d).toDateString()===now.toDateString()){td.style.backgroundColor=&#39;#ffffcc&#39;;}cell++;}tr.appendChild(td);}body.appendChild(tr);}function goToday(){var today=new Date();currentYear=today.getFullYear();currentMonth=today.getMonth();updateSelectors();drawCalendar(currentYear,currentMonth);}function initSelectors(){var yearSel=document.getElementById(&#39;year-select&#39;);var monthSel=document.getElementById(&#39;month-select&#39;);if(!yearSel||!monthSel)return;yearSel.innerHTML=&#39;&#39;;monthSel.innerHTML=&#39;&#39;;for(var y=1900;y&lt;=2100;y++){var opt=document.createElement(&#39;option&#39;);opt.value=y;opt.text=y;yearSel.appendChild(opt);}for(var m=0;m&lt;12;m++){var opt=document.createElement(&#39;option&#39;);opt.value=m;opt.text=m+1;monthSel.appendChild(opt);}updateSelectors();}function updateSelectors(){var yearSel=document.getElementById(&#39;year-select&#39;);var monthSel=document.getElementById(&#39;month-select&#39;);if(yearSel)yearSel.value=currentYear;if(monthSel)monthSel.value=currentMonth;}document.getElementById(&#39;year-select&#39;).addEventListener(&#39;change&#39;,function(){currentYear=parseInt(this.value)||new Date().getFullYear();drawCalendar(currentYear,currentMonth);});document.getElementById(&#39;month-select&#39;).addEventListener(&#39;change&#39;,function(){currentMonth=parseInt(this.value)||new Date().getMonth();drawCalendar(currentYear,currentMonth);});initSelectors();drawCalendar(currentYear,currentMonth);});&lt;/script&gt;</description>
